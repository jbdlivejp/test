<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="strust.devMode" value="true" />
	<package name="com.internousdev.template2.action" extends="struts-default">

		<action name="HomeAction"class="com.internousdev.template2.action.HomeAction" method="execute">
			<result="success">login.jsp</result>
		</action>

		<action name="LoginAction"class="com.internousdev.template2.action.HomeAction" method="execute">
			<result="success">buyItem.jsp</result>
			<result="error">home.jsp</result>
		</action>

		<action name="UserCreateAction"class="com.internousdev.template2.action.UserCreateAction" method="execute">
			<result="success">userCreate.jsp</result>
		</action>

		<action name="UserCreateConfirmAction"class="com.internousdev.template2.action.UserCreateConfirmAction" method="execute">
			<result="success">userCreateConfirm.jsp</result>
			<result="error">userCreate.jsp</result>
		</action>

		<action name="UserCreateCompleteAction"class="com.internousdev.template2.action.UserCreateCompleteAction" method="execute">
			<result="success">userCreateComplete.jsp</result>
		</action>

		<action name="BuyItemAction"class="com.internousdev.template2.action.BuyItemAction" method="execute">
			<result="success">buyItemConfirm.jsp</result>
		</action>

		<action name="BuyItemConfirmAction"class="com.internousdev.template2.action.BuyItemConfirmAction" method="execute">
			<result="success">buyItemComplete.jsp</result>
		</action>

		<action name="MyPageAction"class="com.internousdev.template2.action.MyPageAction" method="execute">
			<result="success">myPage.jsp</result>
		</action>

	</package>
</struts>